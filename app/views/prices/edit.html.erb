<%=raw title "Редактировать прайс" %>

<%= form_for @price, :html => { :multipart => true } do |f| %>
  <%#= f.error_messages %>

  <p>
    Название<br />
    <%= f.text_field :name %>
  </p>
  <p>
    Порядок (число)<br />
    <%= f.text_field :order %>
  </p>
  <p>Файл
    <%= f.file_field :pricefile %>
  </p>
  <p>
    Текст (не обязательно)<br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit 'Сохранить' %>
  </p>
<% end %>

<%= link_to 'Просмотреть', @price %> |
<%= link_to 'Назад', prices_path %>